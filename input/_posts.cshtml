@model IDocument

@foreach (IDocument post in Model.GetChildren())
{
    @Html.Partial("/_post.cshtml", post)
}

@{
    IDocument newer = Model.GetDocument(Keys.Previous);
    IDocument older = Model.GetDocument(Keys.Next);
}
@if (older != null || newer != null)
{
    <div>
        <div class="float-sm-left">
            @if (newer != null)
            {
                <a class="btn btn-primary" href="@Context.GetLink(newer)" role="button"><i class="fas fa-angle-double-left"></i> Plus r&eacute;cent</a>
            }
        </div>
        <div class="float-sm-right">
            @if (older != null)
            {
                <a class="btn btn-primary" href="@Context.GetLink(older)" role="button">Plus ancien <i class="fas fa-angle-double-right"></i></a>
            }
        </div>
        <div class="clearfix"></div>
    </div>
}